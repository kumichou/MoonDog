
<% form_tag("/main", :method => "post") do %>
<ul style="list-style: none;">
	<li>
  		<%= label_tag(:login, "Login") %>
  		<%= text_field_tag(:login) %>
	</li>
	<li>
  		<%= label_tag(:password, "Password") %>
  		<%= password_field_tag(:password) %>
	</li>
	<li>
  		<%= submit_tag("Login") %>
	</li>
</ul>
<% end %>