<h1>Customer Sign-Up</h1>

<% form_for :customer do | f | %>
  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :state %>
    <%= f.text_field :state %>
  </p>
  <p>
    <%= f.label :zip %>
    <%= f.text_field :zip %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :contact_method, "Contact method" %>
    <%= radio_button :project, :contact_method, "O" %> Phone
    <%= radio_button :project, :contact_method, "C" %> Email
  </p>
  <p>
    <%= f.submit  %>
  </p>

<% end %>
